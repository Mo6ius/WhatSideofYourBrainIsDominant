<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorText</item>
        <item name="colorPrimaryDark">@color/colorText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorText</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <!-- Style for edit text in the order form -->
    <style name="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">fill</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#B0BEC5</item>
    </style>

    <!-- Style for question text in the order form -->
    <style name="QuestionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">fill</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#78909C</item>
    </style>

    <!-- Style for answer text in the order form -->
    <style name="AnswerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">fill</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#B0BEC5</item>
    </style>

    <!-- Style for button in the order form -->
    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorText</item>
    </style>

    <!-- Style for result in the order form -->
    <style name="ResultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">fill</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
